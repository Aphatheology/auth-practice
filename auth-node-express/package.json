{
  "name": "auth-nodejs-express",
  "version": "1.0.0",
  "description": "practicing authentication with nodejs express typescript",
  "repository": "https://github.com/Aphatheology/auth-practice/auth-nodejs-express",
  "author": "Aphatheology",
  "license": "MIT",
  "keywords": [
    "api",
    "express",
    "typescript",
    "nodejs",
    "mongodb",
    "mongoose",
    "mongo-migrate"
  ],
  "main": "./dist/server.js",
  "scripts": {
    "test": "ts-node ./dist/server.ts",
    "dev": "cross-env NODE_ENV=development tsc-watch --onSuccess \"node ./dist/server.js\"",
    "prod": "cross-env NODE_ENV=production tsc && node ./dist/server.js",
    "build": "tsc",
    "start": "node ./dist/server.js",
    "migrate:create": "migrate-mongo create",
    "migrate:up": "migrate-mongo up",
    "migrate:down": "migrate-mongo down"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cloudinary": "^2.6.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.7",
    "express": "^5.1.0",
    "http-status": "^2.1.0",
    "http-status-codes": "^2.3.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "migrate-mongo": "^12.1.3",
    "moment": "^2.30.1",
    "mongoose": "^8.13.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.2",
    "multer-storage-cloudinary": "^4.0.0",
    "nodemailer": "^6.10.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^5.0.1",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.12",
    "@types/nodemailer": "^6.4.17",
    "ts-node-dev": "^2.0.0",
    "tsc-watch": "^6.2.1",
    "typescript": "^5.8.3"
  }
}
